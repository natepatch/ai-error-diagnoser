# Datadog credentials (get these from your Datadog team)
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
DATADOG_SITE=https://api.datadoghq.eu  # or https://api.datadoghq.com for US

# GitHub personal access token with repo write access
GITHUB_TOKEN=ghp_your_github_token_here

# OpenAI API access
OPENAI_API_KEY=sk-your-openai-api-key
MODEL_BACKEND=gpt-4  # or mistral, llama2, etc.
OPENAI_MODEL=gpt-4-1106-preview
OLLAMA_HOST=http://localhost:11434  # if using local Ollama setup

# Provide app-specific AI context (recommended)
PROJECT_CONTEXT_HINT=This app uses does a thing
# Optional: only handle a specific span ID from Datadog
TARGET_SPAN_ID=
